<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RecommendationFragment">

    <TextView
        android:id="@+id/tv_fragment_recommend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:text="@string/fragment_recommend_title"
        android:fontFamily="@font/inter_bold"
        android:textColor="#2B2B3D"/>

    <View
        android:id="@+id/view_fragment_recommend"
        android:layout_width="32dp"
        android:layout_height="3dp"
        android:background="@drawable/ic_rectangle"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_fragment_recommend_title"
        app:layout_constraintStart_toStartOf="@+id/tv_fragment_recommend_title"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view_fragment_recommend"
        app:layout_constraintStart_toStartOf="@+id/tv_fragment_recommend_title"
        android:fontFamily="@font/inter_light"
        android:textSize="16sp"
        android:text="@string/fragment_recommend_text"
        android:textColor="#2B2B3D" />




</androidx.constraintlayout.widget.ConstraintLayout>