<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/header_layout_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_launcher_foreground"/>

    <TextView
        android:id="@+id/header_layout_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/header_layout_iv"
        app:layout_constraintBottom_toBottomOf="@+id/header_layout_iv"
        app:layout_constraintStart_toEndOf="@+id/header_layout_iv"
        android:layout_marginStart="20dp"
        android:textAllCaps="true"
        android:text="@string/earthquake"
        android:textSize="14sp"
        android:fontFamily="@font/inter_bold"
        android:textColor="#2B2B3D"/>

    <View
        android:layout_width="353dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/ic_line"/>

</androidx.constraintlayout.widget.ConstraintLayout>